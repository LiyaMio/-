//长度不确定 选STL；


map<int, int> v;
int main()
{
	int t;
	scanf("%d", &t);
	while (t--)
	{
		v.clear();
		ll n, s, k;
		ll m;
		ll c = 0, d = 0;
		cin >> n >> s >> k;
		ll ans = 0;
		for (int i = 0; i < k; ++i)
		{
			cin >> m;
			v[m] = 1;
		}
		int r = maxn;
		int l = maxn;
		for(int i=s;i>=1;--i)
			if (v[i] == 0)
			{
				r = s - i;
				break;
			}
		for (int i = s+1; i <=n;++i)
			if (v[i] == 0)
			{
				l = i - s;
				break;
			}
		cout << min(r, l) << endl;
	
	}
	return 0;
}
